!!! html
%html
  %head
    %meta{:charset => "utf-8"}
    = partial "layouts/partials/signature"
    
    %title= data.page.title 
    = stylesheet_link_tag "application"
    = partial "layouts/partials/ga"
  
  %body.post
    .wrapper
      = partial "layouts/partials/header"
      #main
        %h1.page-title= data.page.title
        %h5.date= date current_page
        = yield 

        %a{href: "#{blog_path}"} &#x21AB; All Notes
