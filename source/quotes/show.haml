.book
  %h1.title= quote.title
  %h4.author= quote.author

  - quote.quotes.each_with_index do |quote, i|
    %p.title
      %span &mdash; 
      %a(href="#quote-#{i}")= "#{quote.title}"

  - quote.quotes.each_with_index do |quote, i|

    .quote(id="quote-#{i}")
      .content
        :markdown
          #{quote.content}
      %p.title
        %span &mdash; 
        %a(href="#quote-#{i}")= "#{quote.title}"
